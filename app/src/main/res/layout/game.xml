<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health: "
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemy Health:"
        android:textColor="#000000"
        android:textSize="16dp"
        android:id="@+id/textView"
        android:layout_above="@+id/sample"
        android:layout_toEndOf="@+id/button4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="Time: "
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_above="@+id/sample"
        android:layout_alignStart="@+id/button2"
        android:layout_marginStart="23dp" />
    <EditText
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:hint="Enter Word"
        android:id="@+id/sample"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/testing" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="test"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/sample"
        android:layout_toEndOf="@+id/sample" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"
        android:onClick="sendData"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recieve"
        android:onClick="receiveData"
        android:id="@+id/button3"
        android:layout_below="@+id/sample"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="51dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testing"/>
</>