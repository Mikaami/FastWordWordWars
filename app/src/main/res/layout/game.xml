<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health: "
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemy Health:"
        android:textColor="#000000"
        android:textSize="24dp"
        android:id="@+id/textView"
        android:layout_below="@+id/time"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="21dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="Time: "
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_below="@+id/SCROLLER_ID"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginStart="53dp" />
    <EditText
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:hint="Enter Word"
        android:id="@+id/sample"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"
        android:onClick="sendData"
        android:id="@+id/button4"
        android:layout_above="@+id/button3"
        android:layout_toEndOf="@+id/sample" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="here"
        android:id="@+id/testing"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="20dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fix"
        android:onClick="fixString"
        android:id="@+id/button3"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/sample"
        android:layout_alignStart="@+id/sample" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">

    </ScrollView>

    <TextView
        android:id="@+id/TEXT_STATUS_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_below="@+id/button3"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/testing" />
</RelativeLayout>